{
    "version": 2,
    "build": {
        "env": {
          "POETRY_VERSION": "1.8.2"
        }
    
      },
    "builds": [
        {
          "src": "bytetactix/wsgi.py",
          "use": "@vercel/python",
          "config": { "maxLambdaSize": "15mb", "runtime": "python3.8" }
        },
        {
          "src": "build_files.sh",
          "use": "@vercel/static-build",
          "config": { "distDir": "static" }
        }
      ],
    "routes": [
        {
            "src":"/static/(.*)",
            "dest":"/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "toys-store/wsgi.py"
        }
    ]
}